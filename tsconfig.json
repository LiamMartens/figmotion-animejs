{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "dom",
      "ES2015",
      "ESNext"
    ],
    "strict": true,
    "outDir": "./lib",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".d.ts/*",
    "**/*.ts",
    "**/*.tsx"
  ]
}
